{
  "autoPrefixerList" : ["last 15 versions", "> 1%", "ie 8", "ie 7"],
  "browserSyncProxy": "127.0.0.1:8010",
  "broswerSyncPort": 8010,
  "phpPort": 8010,
  
  "paths": {
    "bower": "./bower_components/",
    "dev": "./_dev/",
    "dest": "./_site/",

    "assets": {
      "fonts": {
        "src": "./_dev/assets/fonts/**"
      },
      "images": {
        "src": "./_dev/assets/images/",
        "dest": "./_site/assets/images/"
      },
      "styles": {
        "src": "./_dev/assets/styl/**/*.styl",
        "dest": "./_site/assets/css/"
      },
      "scripts": {
        "src": "./_dev/assets/scripts/*.js",
        "dest": "./_site/assets/js/"
      }
    },

    "site": {
      "src": "./_dev/site/**"
    },

    "content": {
      "src": "./_dev/content/**"
    }
  }
}
